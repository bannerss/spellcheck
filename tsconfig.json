{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "server",
    "esModuleInterop": true,
   
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2017",
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@/*": ["*"],
      "@config": ["config"],
      "@controllers/*": ["controllers/*"],
      "@dtos/*": ["dtos/*"],
      "@exceptions/*": ["exceptions/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["server/**/*.ts", "server/**/*.json", ".env"],
  
  "exclude": ["node_modules", "server/http", "server/logs", "/tests"]
}
